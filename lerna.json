{
    "packages": [
      "packages/*"
    ],
    "version": "independent",
    "command": {
      "publish": {
        "conventionalCommits": true,
        "message": "chore(release): publish",
        "registry": "https://registry.npmjs.org",
        "allowBranch": "main"
      },
      "version": {
        "conventionalCommits": true,
        "message": "chore(release): version packages",
        "registry": "https://registry.npmjs.org",
        "allowBranch": "main"
      }
    },
    "publishConfig": {
      "access": "public"
    }
  }
  